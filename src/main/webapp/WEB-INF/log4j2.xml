<?xml version="1.0" encoding="utf-8"?>
<!-- ================================================ -->
<!-- Tomcat log4j2 logger -->
<!-- ================================================ -->
<Configuration status="debug" monitorInterval="5">
	<Properties>
		<Property name="loglayout">%d{yyyy-MM-dd HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n</Property>
	</Properties>
	<Appenders>
		<Console name="console" target="SYSTEM_OUT">
			<PatternLayout pattern="${loglayout}" />
		</Console>
		<RollingFile name="file"
			fileName="${web:rootDir}/WEB-INF/logs/SountMaking.log"
			filePattern="${web:rootDir}/WEB-INF/logs/archive/SountMaking-%d{yyyy-MM-dd}.log"
			append="true">
			<TimeBasedTriggeringPolicy />
			<PatternLayout pattern="${loglayout}" />
		</RollingFile>
	</Appenders>
	<Loggers>
		<Logger name="com.zaxxer.hikari.HikariDataSource" level="trace" additivity="false">
			<AppenderRef ref="console" />
			<AppenderRef ref="file" />
		</Logger>
		<Logger name="com.zaxxer.hikari.pool.HikariPool" level="trace" additivity="false">
			<AppenderRef ref="console" />
			<AppenderRef ref="file" />
		</Logger>
		<Root level="INFO">
			<AppenderRef ref="console" />
			<AppenderRef ref="file" />
		</Root>
	</Loggers>
</Configuration>
